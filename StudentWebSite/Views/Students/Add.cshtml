@model StudentWebSite.Models.AddStudentViewModel
@{
}
<h1 class=" m-3">Add Student</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type"text" class="form-control" asp-for="Id" />
        <label class="form-label">Name</label>
        <input type"text" class="form-control" asp-for="Name"/>
        <label class="form-label">GPA</label>
        <input type"text" class="form-control"asp-for="GPA" />
        <label class="form-label">Student Email</label>
        <input type"text" class="form-control" asp-for="StudentEmail" />
        <label class="form-label">Major</label>
        <input type"text" class="form-control" asp-for="Major" />
        <label class="form-label">Phone Number</label>
        <input type"text" class="form-control" asp-for="PhoneNumber" />
        <label class="form-label">Student UserName</label>
        <input type"text" class="form-control" asp-for="StudentUserName" />

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save </button>
        </div>

    </div>
</form>

